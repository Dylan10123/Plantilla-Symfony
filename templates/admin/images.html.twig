{% extends 'base.html.twig' %}
{% block title %}Creative - New Project
{% endblock %}
{% block tituloHeader %}Add a new project
{% endblock %}
{% block body %}

	<section class="page-section" id="contact">
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-lg-8 col-xl-6 text-center">
					<h2 class="mt-0">Let's add a new project!</h2>
					<hr class="divider"/>
				</div>
			</div>
			<div class="row gx-4 gx-lg-5 justify-content-center mb-5">
				<div class="col-lg-6">
					{{ form_start(form, {'attr': {'class':'form-horizontal'}}
					) }}
					{{ form_errors(form) }}
						<div class="form-group"> <div class="col-xs-6">
							{{ form_row(form.projectName, {'attr': {'class':'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-xs-12">
							{{ form_row(form.category, {'attr': {'class':'form-select'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-xs-12">
							{{ form_row(form.file, {'attr': {'class':'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-xs-12">
							{{ form_row(form.Send, {'attr': {'class':'pull-right btn btn-lg sr-button btn-primary mt-2 mb-2'}}) }}
						</div>
					</div>
					{{ form_end(form) }}

				</div>
			</div>
		</div>
	</section>

{% endblock %}
